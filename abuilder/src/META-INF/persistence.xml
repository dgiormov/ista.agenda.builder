<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="persistence" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>persistency.entities.Session</class>
		<class>persistency.entities.Speaker</class>
		<class>persistency.entities.LoggedUser</class>
		<class>persistency.entities.Comment</class>
		<class>persistency.entities.admin.EnabledFunctionality</class>
		<class>persistency.entities.gamification.PointsInstance</class>
		<class>persistency.entities.gamification.PointsCategory</class>
		<class>persistency.entities.gamification.Rank</class>
		<class>persistency.entities.feedback.Question</class>
		<class>persistency.entities.feedback.Answer</class>
		<properties>
			<property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
		</properties>
	</persistence-unit>
</persistence>
